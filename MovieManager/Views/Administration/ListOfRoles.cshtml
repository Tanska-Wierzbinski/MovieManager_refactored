@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "List of roles";
}

<h1>List of roles</h1>

@if (Model.Any())
{
    foreach (var role in Model)
    {
        <h4>@role.Name</h4> <a class="btn btn-outline-warning" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">Edit</a> <a class="btn btn-outline-dark" asp-controller="Administration" asp-action="DeleteRole" asp-route-id="@role.Id">Delete</a>
        <hr />
    }
    <p></p>
    <a asp-controller="Administration" asp-action="CreateRole" class="btn btn-warning">Create new role</a>
}

else
{
    <h5>There's no roles yet.</h5>
    <a asp-controller="Administration" asp-action="CreateRole" class="btn btn-primary">Create new role</a>
}